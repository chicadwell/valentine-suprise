let text = "Will you be my Valentine?";
let i = 0;
function typeWriter() {
    if (i < text.length) {
        document.getElementById("question").innerHTML += text.charAt(i);
        i++;
        setTimeout(typeWriter, 100);
    }
}
typeWriter();

